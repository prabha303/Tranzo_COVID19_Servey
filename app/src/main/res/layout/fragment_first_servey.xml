<?xml version = "1.0" encoding = "utf-8"?>
<LinearLayout
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/_24sdp"
            android:src="@drawable/ic_back"
            android:tint="@color/black"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_height="@dimen/_24sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:textSize="@dimen/_19sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:textColor="@color/colorPrimary"
            android:text="@string/covid_19_survey"
            android:layout_height="wrap_content" />
    </LinearLayout>





        <ScrollView
             android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:background="@color/white"
                android:layout_margin="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:text="@string/current_gps_location"
                    android:layout_height="wrap_content" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:padding="@dimen/_6sdp"
                    app:cardElevation="@dimen/_6sdp">


                    <LinearLayout
                        android:layout_width = "match_parent"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:layout_height = "wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:src="@drawable/ic_location"
                            android:tint="@color/blue_app"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:padding="@dimen/_8sdp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:layout_weight="3"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/black"
                            android:text="Siri Towers, 3,4 Fourrts Avenue, Thuraipakkam, Chennai-600097"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_marginStart="@dimen/_4sdp"/>


                        <TextView
                            android:layout_width="0dp"
                            android:background="@drawable/ic_edit"
                            android:layout_weight="1"
                            android:text="Edit"
                            android:fontFamily="@font/roboto_regular"
                            android:padding="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:padding="@dimen/_6sdp"
                    app:cardElevation="@dimen/_6sdp">


                    <LinearLayout
                        android:layout_width = "match_parent"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_height = "match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/black"
                            android:text="@string/servey_area"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/servey_area"
                            android:inputType="text"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="@dimen/_12sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:padding="@dimen/_6sdp"
                    app:cardElevation="@dimen/_6sdp">
                    <LinearLayout
                        android:layout_width = "match_parent"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_height = "match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/black"
                            android:text="@string/door_no"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/door_no"
                            android:inputType="text"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="@dimen/_12sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:padding="@dimen/_6sdp"
                    app:cardElevation="@dimen/_6sdp">
                    <LinearLayout
                        android:layout_width = "match_parent"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_height = "match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/black"
                            android:text="@string/street_name"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/street_name"
                            android:inputType="text"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="@dimen/_12sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:padding="@dimen/_6sdp"
                    app:cardElevation="@dimen/_6sdp">
                    <LinearLayout
                        android:layout_width = "match_parent"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_height = "match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/black"
                            android:text="@string/family_head_name_person"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/family_head_name_person"
                            android:inputType="text"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:padding="@dimen/_6sdp"
                    app:cardElevation="@dimen/_6sdp">
                    <LinearLayout
                        android:layout_width = "match_parent"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_height = "match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/black"
                            android:text="@string/number_of_people_staying_with"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_gravity="start|left"
                            android:gravity="center"
                            android:visibility="visible"
                            android:layout_height="wrap_content" >
                            <ImageView
                                android:id="@+id/number_of_people_staying_minus_quantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:src="@drawable/ic_minus_circle"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:visibility="visible"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:textSize="@dimen/_16sdp" />
                            <TextView
                                android:id="@+id/number_of_people_staying_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:visibility="visible"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_14sdp"
                                android:text="0" />
                            <ImageView
                                android:id="@+id/number_of_people_staying_add_quantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:src="@drawable/ic_plus_circle"
                                android:gravity="end"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:visibility="visible"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_14sdp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_6sdp"
                    app:cardElevation="@dimen/_6sdp">
                    <LinearLayout
                        android:layout_width = "match_parent"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_height = "match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:text="@string/number_of_aged_people_staying"
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_gravity="center|start"
                            android:gravity="center"
                            android:visibility="visible"
                            android:layout_height="wrap_content" >
                            <ImageView
                                android:id="@+id/aged_people_minus_quantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:src="@drawable/ic_minus_circle"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:visibility="visible"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:textSize="@dimen/_16sdp" />
                            <TextView
                                android:id="@+id/aged_people_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:visibility="visible"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_14sdp"
                                android:text="0" />
                            <ImageView
                                android:id="@+id/aged_people_add_quantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:src="@drawable/ic_plus_circle"
                                android:gravity="end"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:visibility="visible"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_14sdp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_6sdp"
                    app:cardElevation="@dimen/_6sdp">
                    <LinearLayout
                        android:layout_width = "match_parent"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_height = "match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/black"
                            android:text="@string/kids_below10_infants"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:id="@+id/kids_below_add_remove_layout"
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_gravity="start|left"
                            android:gravity="center"
                            android:visibility="visible"
                            android:layout_height="wrap_content" >
                            <ImageView
                                android:id="@+id/minus_quantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:src="@drawable/ic_minus_circle"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:visibility="visible"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:textSize="@dimen/_16sdp"
                                android:text="-" />
                            <TextView
                                android:id="@+id/kids_below10_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:visibility="visible"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_14sdp"
                                android:text="0" />
                            <ImageView
                                android:id="@+id/add_quantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:src="@drawable/ic_plus_circle"
                                android:gravity="end"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:visibility="visible"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_14sdp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/save_and_continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/save_and_continue"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/button_bg"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp" />

            </LinearLayout>
        </ScrollView>
     </LinearLayout>











